@model List<Setting>
@{
    int count = 0;
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Key</th>
                            <th>Value</th>
                            <th>Settings</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Setting setting in Model)
                        {
                            <tr>
                                <td>@(++count)</td>
                                <td>@setting.Key</td>
                                <td>@setting.Value </td>
                                <td>
                                    <a class="btn btn-success" asp-action="Update" asp-route-id="@setting.Id">Update</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
           
        </div>
    </div>
</div>